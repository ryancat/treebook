<div class="page-header">
	<h1>All of the Statuses</h1>
</div>

<%= link_to "Post New", new_status_path, :class => "btn btn-success newStatusBtn" %>

<div class="post_items">
	<% @statuses.each do |status| %>
	<div class="item borderbox borderRadius_6px">
		
		<div class="item_title">
			<a href="#" class="poster"><%= status.name %></a>
			<span class="timeAgo"><%= "- " + time_ago_in_words(status.created_at) + " ago" %></span>
			<%= image_tag 'xryanchen.png', :class => 'user_icon borderRadius_6px'%>
		</div>
		<p class="post"><%= status.content %></p>
		
		<div class="meta">
			<%= link_to "Show", status %> 
			<span class="admin">
				<%= link_to "Edit", edit_status_path(status) %>
				<%= link_to "Delete", status, method: :delete, data: { confirm: 'Are you sure?'} %>
			</span>
		</div>
	</div>	
	<% end %>
</div>
